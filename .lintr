linters: lintr::with_defaults(
  line_length_linter = lintr::line_length_linter(100),    # Maximum 100 characters per line
  object_name_linter = lintr::object_name_linter(         # Variable names in snake_case or camelCase
    styles = c("snake_case", "camelCase")
  ),
  commented_code_linter = NULL                           # Ignores commented-out code
)

exclude: list(                                           # Files to exclude from linting
  "src/",                                                # Exclude C++ files
  "tests/testthat/"
)